<% present(@game) do |game| %>
  <%= render "shared/error_messages", object: game %>

  <h2>Game: <%= game.status.humanize %></h2>
  <p>User: <%= game.username %></p>

  <%= display_status(game) %>

  <h3>Guesses:</h3>
  <ul>
    <%= render game.guesses %>
  </ul>

  <% if @game.in_progress? %>
    <%= render partial: "games/new_guess", collection: game.unguessed_letters_of_alphabet, as: :letter %>
  <% end %>

  <br>

  <%= button_to "Back to games list", games_path, method: :get %>
<% end %>
